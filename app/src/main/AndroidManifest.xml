<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dict">
    <!-- 网络请求权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".UniteApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- 拼音搜索activity -->
        <activity
            android:name=".SearchPinyinActivity"
            android:screenOrientation="portrait" /> <!-- 部首搜索activity -->
        <activity
            android:name=".SearchBuShouActivity"
            android:screenOrientation="portrait" /> <!-- 文字详情Activity -->
        <activity
            android:name=".WordInfoActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".CollectionActivity" android:screenOrientation="portrait" />
        <activity android:name=".SettingActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ChengyuInfoActivity" android:screenOrientation="portrait"/>
        <activity android:name=".SearchChengyuActivity" android:screenOrientation="portrait"/>
        <activity android:name=".IdentifyImgActivity" android:screenOrientation="portrait"/>
    </application>

</manifest>